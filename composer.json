{
    "name": "mirko-pagliai/cakephp-files-backup",
    "description": "Files Backup plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/cakephp-files-backup",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0",
        "mirko-pagliai/php-tools": "1.5.9",
        "symfony/finder": "^5.0|^6.0",
        "symfony/options-resolver": "^5.0|^6.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^4.4",
        "phpunit/phpunit": "^8.5.14|^9.0"
    },
    "autoload": {
        "psr-4": {
            "FilesBackup\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/TestApp/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests",
            "FilesBackup\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@update-lowest",
            "phpunit",
            "@composer update",
            "phpunit",
            "@stan"
        ],
        "cs-check": "phpcs --standard=phpcs.xml.dist",
        "cs-fix": "phpcbf --standard=phpcs.xml.dist",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
        "phpstan": "phpstan.phar analyse",
        "psalm": "psalm.phar",
        "stan": [
            "@stan-setup",
            "@phpstan",
            "@psalm"
        ],
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 psalm/phar:\"^3.18|^4\" && mv composer.backup composer.json",
        "update-lowest": "@composer update --prefer-lowest"
    }
}
